<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-feature android:name="android.hardware.camera.any" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".MitosBookingApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MitosBooking">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MitosBooking">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ScannerActivity"
            android:label="@string/title_activity_scanner"
            android:theme="@style/Theme.MitosBooking" />
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/Theme.MitosBooking" />
        <activity
            android:name=".TransactionActivity"
            android:label="@string/title_activity_transaction"
            android:theme="@style/Theme.MitosBooking" />
        <activity
            android:name=".AcceptTransactionActivity"
            android:label="@string/title_activity_accept_transaction"
            android:theme="@style/Theme.MitosBooking" />
        <activity
            android:name=".ConfirmReturnActivity"
            android:label="Confirmer le retour"
            android:theme="@style/Theme.MitosBooking" />
        <activity
            android:name=".ReturnTransactionActivity"
            android:label="Retourner le livre"
            android:theme="@style/Theme.MitosBooking" />
    </application>

</manifest>